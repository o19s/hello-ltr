      </analyzer>
    </fieldType>

    <dynamicField name="*_multiterm_syn" type="text_general_multiterm_syn"  indexed="true"  stored="true"/> 
    <fieldType name="text_general_multiterm_syn" class="solr.TextField" autoGeneratePhraseQueries="true" 
